<div class="col-md-12">
	<% if(noMatch !== undefined) { %>
		<h3><%= noMatch %></h3>
	<% } else { %>
</div>


<h3>Milk Products</h3>
<br>
<div class="row text-center" style="display: flex; flex-wrap: wrap;">
	<% products.forEach(function(product){ %>
	<% if(product.category == "Milk Products" && product.display == true){ %>
		<div class="col-md-3 col-sm-6 col-xs-6">
			<div style="background: #D9DBCC;" class="thumbnail">
				<a href="/product/<%= product.id %>"><img class="img-fluid" id="productImage" src="<%= product.image %>"></a>
				<div class="caption" style="padding: 0; margin-top: 8px;">
					<h4"><strong><%= product.name %>: â‚¹<%= product.price %></strong></h4>
					<form action="/product/<%= product.id %>" method="GET">
					<button style="margin: 5px; width: 80%" class="btn btn-success">PICK</button>
					</form>
				</div>
			</div>	
		</div>
	<% } %>
	<% }); %>
</div>





