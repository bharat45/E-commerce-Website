<%- include('partials/header') %>

<form action="/" method="GET" class="form-inline">
	<div class="row">
	<div class="text-center" style="width: auto;">
		<div class="col-md-8 col-md-offset-2">
		<input type="text" id="search" style="margin: 0; display: inline;" name="search" placeholder="search your item here." class="search-bar" list="searchresults" onchange="this.form.submit()">
		<input type="submit" style="margin: 0; display:inline;" value="Search" class="btn btn-success">
		<datalist id="searchresults">
		</datalist>
		<template id="resultstemplate">
			<% products.forEach(function(product){ %>
				<option> <%= product.name %> </option>
			<% }); %>
		</template>
		</div>
	</div>
	</div>
</form>

