<%- include('../partials/header') %>

<div class="row">
    <h1 style="text-align: center">Edit Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/profile/<%= user._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="email" name="user[username]" value="<%= user.username %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[name]" value="<%= user.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[phoneNumber]" value="<%= user.phoneNumber %>">
            </div>
            <div class="form-group">
                <select class="form-control" type="text" name="user[country]" value="<%= user.country %>">
                    <option>India</option>
                </select>
            </div>
            <div class="form-group">
                <select id="state" class="form-control" type="text" name="state" value="<%= user.state %>">
                    <option>Haryan</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" type="text" name="user[city]" value="<%= user.city %>">
                    <option>Gurugram</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" type="text" name="user[area]" value="<%= user.area %>">
                    <option disabled selected><%= user.area %></option>
                    <option>shivpuri</option>
                    <option>Sec-7</option>
                    <option>Sec-4</option>
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[houseNumber]" value="<%= user.houseNumber %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </div>
        </form>
        <form action="/profile/<%= user._id %>?_method=DELETE" method="POST">
			<div class="form-group"><button class="btn btn-lg btn-danger btn-block">Delete</button></div>
		</form>
        <a href="/">Go Back</a>
    </div>
</div>

<%- include('../partials/footer') %>