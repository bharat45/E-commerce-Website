<%- include('./partials/header') %>

<div class="row">
<div class="col-md-4 col-md-offset-4">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="margin: 25px auto;">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="email">E-mail ID</label>
                <input id="email" class="form-control" type="email" name="username" placeholder="E-Mail ID">
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="name" placeholder="Full Name">
            </div>
            <div class="form-group">
                <label for="phn">Phone Number</label>
                <input id="phn" class="form-control" type="text" name="phonenumber" placeholder="Phone Number">
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <select id="country" class="form-control" type="text" name="country" placeholder="Country">
                    <option>India</option>
                </select>
            </div>
            <div class="form-group">
                <label for="state">State</label>
                <select id="state" class="form-control" type="text" name="state">
                    <option>Haryan</option>
                </select>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <select id="city" class="form-control" type="text" name="city" placeholder="City">
                    <option>Gurugram</option>
                </select>
            </div>
            <div class="form-group">
                <label for="area">Area</label>
                <select id="area" class="form-control" type="text" name="area" placeholder="Area">
                    <option>Sec-7</option>
                </select>
            </div>
            <div class="form-group">
                <label for="hno">House no.</label>
                <input id="hno" class="form-control" type="text" name="housenumber" placeholder="House.No.">
            </div>
            <div class="form-group">
                <label for="pass">Create Password</label>
                <input id="pass" class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
</div>


<%- include('./partials/footer') %>